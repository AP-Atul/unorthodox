<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/art"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:foreground="@drawable/drop_shadow_high"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_desc" />

    <TextView
        android:id="@+id/holy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/holy_sub_title"
        android:layout_marginTop="@dimen/margin"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/padding"
        android:shadowColor="@color/text_shadow_white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:textColor="@color/text_high_color"
        android:textSize="@dimen/text_small_title" />

    <TextView
        android:id="@+id/holy_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/art"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/padding"
        android:textColor="@color/text_high_color"
        android:textSize="@dimen/text_synopsis" />

</RelativeLayout>