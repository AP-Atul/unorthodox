<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/drop_shadow"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_desc" />

    <TextView
        android:id="@+id/holy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/holy_sub_title"
        android:layout_marginTop="@dimen/margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingHorizontal="@dimen/padding"
        android:shadowColor="@color/text_shadow_white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:textColor="@color/text_high_color"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/holy_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/action_bar_size"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingHorizontal="@dimen/padding"
        android:textColor="@color/text_high_color"
        android:textSize="@dimen/text_synopsis" />


</RelativeLayout>